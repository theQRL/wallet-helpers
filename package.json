{
  "name": "@theqrl/wallet-helpers",
  "version": "4.0.0",
  "description": "QRL wallet helpers",
  "main": "dist/index.js",
  "files": [
    "dist/index.js",
    "dist/v3wallet.js"
  ],
  "scripts": {
    "build": "run-s build:lib build:example",
    "build:lib": "babel src --out-dir ./dist --source-maps",
    "build:example": "esbuild example/browser.js --bundle --format=iife --global-name=WalletHelpersBrowser --outfile=example/bundle.js",
    "lint": "eslint ./src",
    "test": "nyc ./node_modules/.bin/mocha --timeout 10000",
    "debug": "node --inspect-brk ./dist/index.js",
    "cover": "mkdir -p coverage && nyc --reporter=text ./node_modules/mocha/bin/_mocha test/*.js --timeout 10000 && nyc --reporter=text-lcov ./node_modules/mocha/bin/_mocha --timeout 10000 test/*.js > coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theqrl/wallet-helpers.git"
  },
  "author": "QRL contributors <info@theqrl.org> (https://theqrl.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/theqrl/wallet-helpers/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/theqrl/wallet-helpers#readme",
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/node": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^7.1.2",
    "coveralls-next": "^6.0.1",
    "esbuild": "^0.27.3",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "mocha": "^11.7.5",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "scrypt-js": "^3.0.1"
  },
  "dependencies": {
    "js-sha256": "^0.11.1"
  },
  "optionalDependencies": {
    "argon2": "^0.44.0"
  },
  "nyc": {
    "reporter": [
      "text-summary",
      "html"
    ],
    "extension": [
      ".js"
    ],
    "cache": false,
    "temp-dir": "./test/.nyc-temp",
    "report-dir": "./test/nyc"
  }
}
